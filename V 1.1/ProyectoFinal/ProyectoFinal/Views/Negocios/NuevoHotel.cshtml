                                @Html.ValidationMessageFor(model => model.Sucursal.FirstOrDefault().Domicilio.dpto)
                            </div>
                        </div>
                    </div>
                    <br />
                </div>



            </div>
            <br />
            <br />


            <div class="row">
                <h4 class="panel-title">Características <span class="text-bold">Hotel</span></h4>
                <hr>
                <div class="col-lg-6">
                    <div class="form-group col-lg-offset-1">
                        @Html.Label("Categoría:", new { @class = "control-label" })
                        <br />
                        @{
            SelectList categ = ViewBag.Categorias;
            int i = 0;
            foreach (var item in categ)
            {
                i++;
                @Html.RadioButton("categ", item.Value, new { id = item.Value })
                for (int j = 0; j < i; j++)
                {
                    <i class="fa fa-star" style="color:gold;"></i>
                }
                <br />
                            @*@Html.Label(item.Text, new { @class = "control-label" })
                                <br />*@
            }
                        }
                    </div>

                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.Label("Características:", new { @class = "control-label" })
                        <br />

                        <ul>
                            @{

            List<DAL.Caracteristica> carac = ViewBag.Carac;


            foreach (var item in carac)
            {
                if (item.idTipoCaracteristica == 1 || item.idTipoCaracteristica == 4)
                {
                    <li class="col-md-6 col-sm-4">
                        @Html.CheckBox(item.nombre, new { id = item.idCaracteristica })  @Html.Label(item.nombre, new { @class = "control-label" })
                        <br />
                    </li>
                }
            }
                            }
                        </ul>



                    </div>

                </div>


            </div>

