<script language="javascript" type="text/javascript">
    function addRow() {

        var index = $("#tbDptos").children("tr").length;

        var indexCell = "<td style='display:none'><input name='Habitacion.idHabitacion' type='hidden' value='" + index + "' />  </td>";
        var titleCell = "<td><input id='Capacidad_" + index + "' name='Capacidad_" + index + "' type='text' class='form-control' placeholder='Capacidad Máxima..' value='' /> <br/> <br/></td>";
        var publishedCell = "<td><input id='Cantidad_" + index + "' name='Cantidad_" + index + "' type='text' class='form-control'  placeholder='Cantidad..' value='' /> <br/><br/>  </td> ";
        var removeCell = "<td><button id='btnAddDptos'  class='btn btn-red' style='width:160px;' onclick='removeRow(" + index + ");'> Borrar <i class='fa fa-minus-square'></i> </button></td>";

        var newRow = "<tr class='col-lg-offset-4' id='trDptos" + index + "'> <br/>  " +
        indexCell + titleCell + publishedCell + removeCell + "</tr> <br/>";
        $("#tbDptos").append(newRow);

    }

    function removeRow(id) {
        var controlToBeRemoved = "#trDptos" + id;
        $(controlToBeRemoved).remove();
    }


</script>

