@model IEnumerable<BussinesEntities.EncuestaEntityIndexUsuario>
@using GridMvc.Html

<script type="text/javascript">

    var perfil = "@ViewBag.Perfil"
    var mensaje = "@ViewBag.Mensaje"

    $(document).ready(function () {


        if (perfil == 1) {
            $("#btnTusTramites").show();
            $("#btnTusNegocios").hide();
            $("#btnTusTramitesAsignados").hide();
            $("#btnTodosLosTramites").hide();
            $("#tabSecretaria").hide();
            $("#btnTusPromociones").show();
        }

        if (perfil == 2) {
            $("#btnTusTramites").show();
            $("#btnTusNegocios").show();
            $("#btnTusTramitesAsignados").hide();
            $("#btnTodosLosTramites").hide();
            $("#tabSecretaria").hide();
            $("#btnTusPromociones").hide();
        }

        if (perfil == 3) {
            $("#btnTusTramites").show();
            $("#btnTusNegocios").hide();
            $("#btnTusTramitesAsignados").show();
            $("#btnTodosLosTramites").show();
            $("#tabSecretaria").show();
            $("#btnTusPromociones").hide();
        }

        if (mensaje != "") {
            alert(mensaje);
        }

        $("#btnTusTramites").click(function (event) {
            window.location = '@Url.Action("TramitesUsuario","Tramites")';
            event.preventDefault();
        });

        $("#btnModificarDatos").click(function (event) {
            window.location = '@Url.Action("EditUsuario","Usuarios")';
            event.preventDefault();
        });

        $("#btnTusPromociones").click(function (event) {
            window.location = '@Url.Action("PromocionesUsuario","Promociones")';
            event.preventDefault();
        });

        $("#btnTusEncuestas").click(function (event) {
            window.location = '@Url.Action("EncuestasUsuario","Encuestas")';
            event.preventDefault();
        });

        $("#btnTusNegocios").click(function (event) {
            window.location = '@Url.Action("NegociosUsuario","Negocios")';
            event.preventDefault();
        });
    });
</script>









<!-- LIGHT SECTION -->
<section class="lightSection clearfix pageHeader">
    <div class="container">
        <div class="row">
            <div class="col-xs-6">
                <div class="page-title">
                    <h2>Panel de Control</h2>
                </div>
            </div>
            <div class="col-xs-6">
                <ol class="breadcrumb pull-right">
                    <li>
                        <a href="portada.htm">INICIO</a>
                    </li>
                    <li class="active">Panel de Control</li>
                </ol>
            </div>
        </div>
    </div>
</section>


<!-- MAIN CONTENT SECTION -->
<section class="mainContent clearfix userProfile">
    <div class="container">
 

        <div class="row">

            <div class="col-xs-12">
                <div class="btn-group" role="group" aria-label="..." style="text-align:center">

                    <a class="btn btn-default" id="btnModificarDatos" style="width:200px;">
                        MODIFICÁ TUS DATOS
                    </a>

                    <a href="" class="btn btn-default" id="btnTusPromociones" style="width:250px;">
                        TUS PROMOCIONES
                    </a>

                    <a class="btn btn-default" id="btnTusTramites" style="width:200px;">
                        TUS TRAMITES
                    </a>

                    <a class="btn btn-default active" id="btnTusEncuestas" style="width:200px;">
                        TUS ENCUESTAS
                    </a>

                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-xs-12">
                <div class="innerWrapper">
                    <div class="orderBox myAddress">
                        <br />

                        @if (Model.Count() > 0)
                        {
                            @helper btnResponder(BussinesEntities.EncuestaEntityIndexUsuario e)
                            {
    
                                if(e.RESPUESTA == "PENDIENTE")
                                { 
                                    <button style="font-size:10px; padding: 5px;" onclick="window.location = '@Url.Action("ResponderEncuesta", "Encuestas", new { tipoEncuesta = e.TIPO, idEncuestaAsignada = e.idEncuestaAsignada })'" class="btn btn-xs btn-blue tooltips" data-placement="top" data-original-title="Editar">Responder</button>
                                }
                                else 
                                {
                                     <button style="font-size:10px; padding: 5px;" onclick="window.location = '@Url.Action("VerEncuestaUsuario", "Encuestas", new { idEncuestaAsignada = e.idEncuestaAsignada })'" class="btn btn-xs btn-blue tooltips" data-placement="top" data-original-title="Ver">VER RESPUESTAS</button>
                                     <button style="font-size:10px; padding: 5px;" disabled onclick="window.location = '@Url.Action("ResponderEncuesta", "Encuestas", new { tipoEncuesta = e.TIPO, idEncuestaAsignada = e.idEncuestaAsignada })'" class="btn btn-xs btn-blue tooltips" data-placement="top" data-original-title="Editar">Responder</button>                                
                                }
                                
                             }
                            
                            @Html.Grid(Model).Columns(columns =>
                               {
                                   //columns.Add(model => model.fechaAlta).Titled("Fecha Alta");
                                   columns.Add(model => model.TIPO).Titled("Tipo").SetWidth(30);
                                   columns.Add(model => model.NEGOCIO).Titled("Negocio").SetWidth(100);
                                   columns.Add(model => model.ASIGNADA).Titled("Asignada").SetWidth(20);
                                   columns.Add(model => model.RESPUESTA).Titled("Respuesta").SetWidth(30);
                                   columns.Add().Titled("")
                                       .Encoded(false)
                                       .Sanitized(false)
                                       .SetWidth(40)
                                       .RenderValueAs(e => btnResponder(e));
                               }).WithPaging(10).Sortable(true)


                        }
                        else
                        {

                            <div id="NoNegocios" style="align-self:center; font-size:20px;">
                                <strong>
                                    No tenes encuestas para responder.
                                </strong>
                            </div>

                        }

                    </div>
                </div>
            </div>
        </div>
    </div>




</section>
