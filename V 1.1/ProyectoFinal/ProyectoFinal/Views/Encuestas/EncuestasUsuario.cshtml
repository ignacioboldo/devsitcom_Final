@model IEnumerable<BussinesEntities.EncuestaEntityIndexUsuario>
@using GridMvc.Html








<!-- LIGHT SECTION -->
<section class="lightSection clearfix pageHeader">
    <div class="container">
        <div class="row">
            <div class="col-xs-6">
                <div class="page-title">
                    <h2>Panel de Control</h2>
                </div>
            </div>
            <div class="col-xs-6">
                <ol class="breadcrumb pull-right">
                    <li>
                        <a href="portada.htm">INICIO</a>
                    </li>
                    <li class="active">Panel de Control</li>
                </ol>
            </div>
        </div>
    </div>
</section>


<!-- MAIN CONTENT SECTION -->
<section class="mainContent clearfix userProfile">
    <div class="container">
 

        @Html.Partial("_Botonera")

        <div class="row">
            <div class="col-xs-12">
                <div class="innerWrapper">
                    <div class="orderBox myAddress">
                        <br />

                        @if (Model.Count() > 0)
                        {
                            @helper btnResponder(BussinesEntities.EncuestaEntityIndexUsuario e)
                            {
    
                                if(e.RESPUESTA == "PENDIENTE")
                                { 
                                    <button style="font-size:10px; padding: 5px;" onclick="window.location = '@Url.Action("ResponderEncuesta", "Encuestas", new { tipoEncuesta = e.TIPO, idEncuestaAsignada = e.idEncuestaAsignada })'" class="btn btn-xs btn-blue tooltips" data-placement="top" data-original-title="Editar">Responder</button>
                                }
                                else 
                                {
                                     <button style="font-size:10px; padding: 5px;" onclick="window.location = '@Url.Action("VerEncuestaUsuario", "Encuestas", new { idEncuestaAsignada = e.idEncuestaAsignada })'" class="btn btn-xs btn-blue tooltips" data-placement="top" data-original-title="Ver">VER RESPUESTAS</button>
                                     <button style="font-size:10px; padding: 5px;" disabled onclick="window.location = '@Url.Action("ResponderEncuesta", "Encuestas", new { tipoEncuesta = e.TIPO, idEncuestaAsignada = e.idEncuestaAsignada })'" class="btn btn-xs btn-blue tooltips" data-placement="top" data-original-title="Editar">Responder</button>                                
                                }
                                
                             }
                            
                            @Html.Grid(Model).Columns(columns =>
                               {
                                   //columns.Add(model => model.fechaAlta).Titled("Fecha Alta");
                                   columns.Add(model => model.TIPO).Titled("Tipo").SetWidth(30);
                                   columns.Add(model => model.NEGOCIO).Titled("Negocio").SetWidth(100);
                                   columns.Add(model => model.ASIGNADA).Titled("Asignada").SetWidth(20);
                                   columns.Add(model => model.RESPUESTA).Titled("Respuesta").SetWidth(30);
                                   columns.Add().Titled("")
                                       .Encoded(false)
                                       .Sanitized(false)
                                       .SetWidth(40)
                                       .RenderValueAs(e => btnResponder(e));
                               }).WithPaging(10).Sortable(true)


                        }
                        else
                        {

                            <div id="NoNegocios" style="align-self:center; font-size:20px;">
                                <strong>
                                    No tenes encuestas para responder.
                                </strong>
                            </div>

                        }

                    </div>
                </div>
            </div>
        </div>
    </div>




</section>
