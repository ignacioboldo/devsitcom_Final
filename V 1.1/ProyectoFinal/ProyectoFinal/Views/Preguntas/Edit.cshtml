                @Html.DropDownList("idEncuesta", String.Empty)
                @Html.ValidationMessageFor(model => model.idEncuesta)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idClasifPregunta, "idClasifPregunta", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idClasifPregunta", String.Empty)
                @Html.ValidationMessageFor(model => model.idClasifPregunta)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idTipoRespuesta, "idTipoRespuesta", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idTipoRespuesta", String.Empty)
                @Html.ValidationMessageFor(model => model.idTipoRespuesta)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
