                @Html.EditorFor(model => model.textoPregunta)
                @Html.ValidationMessageFor(model => model.textoPregunta)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idEncuesta, "idEncuesta", new { @class = "control-label col-md-2" })
