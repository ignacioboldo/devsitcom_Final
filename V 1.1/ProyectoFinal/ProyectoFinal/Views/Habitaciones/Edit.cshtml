@model DAL.Habitacion

<!-- LIGHT SECTION -->
<section class="lightSection clearfix pageHeader">
    <div class="container">
        <div class="row">
            <div class="col-xs-6">
                <div class="page-title">
                    <h2>EDITAR HABITACION</h2>
                </div>
            </div>
            <div class="col-xs-6">
                <ol class="breadcrumb pull-right">
                    <li>
                        <a href="#">INICIO</a>
                    </li>
                    <li class="active">EDITAR HABITACION</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="mainContent clearfix userProfile">
    <div class="container">


        <div class="panel panel-white">

            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Habitacion</h4>
                        <hr />
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.idHabitacion)
                        @Html.HiddenFor(model => model.idHotel)

                        <div class="form-group">
                            <div class="col-xs-12 col-lg-offset-1">
                                @Html.Label("Nombre Habitación:", new { @class = "control-label" })
                                <br />
                                @Html.EditorFor(model => model.nombreHabitacion)
                                @Html.ValidationMessageFor(model => model.nombreHabitacion)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12 col-lg-offset-1">
                                @Html.Label("Tipo: ", new { @class = "control-label" })
                                <br />

                                @Html.DropDownList("idTipoHabitacion", String.Empty)
                                @Html.ValidationMessageFor(model => model.idTipoHabitacion)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12 col-lg-offset-1">
                                @Html.Label("Cantidad de baños: ", new { @class = "control-label" })
                                <br />
                                @Html.EditorFor(model => model.cantidadBanios)
                                @Html.ValidationMessageFor(model => model.cantidadBanios)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12 col-lg-offset-1">


                                @Html.CheckBox("balcon", Model.balcon) @Html.Label("Balcón ", new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.balcon)


                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12 col-lg-offset-1">


                                @Html.CheckBox("heladera", Model.heladera) @Html.Label("Heladera ", new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.heladera)


                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12 col-lg-offset-1">


                                @Html.CheckBox("microondas", Model.microondas) @Html.Label("Microondas ", new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.microondas)


                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-5 col-md-10">
                                <button type="submit" class="btn btn-green">
                                    GUARDAR
                                    <i class="fa fa-save"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }



            </div>
            @Html.ActionLink("VOLVER", "Index", new { idHotel = Model.idHotel })
        </div>


    </div>
</section>

