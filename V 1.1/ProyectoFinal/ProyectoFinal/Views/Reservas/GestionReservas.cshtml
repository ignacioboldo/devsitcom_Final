@model BussinesEntities.NegocioEntity

<script type="text/javascript">


    function consultarReserva(nro_reserva) {

        $('#nro_reserva').html(nro_reserva);


        $('#myModal').modal('show');
        listarComentarios();

        return false;
    }

    function listarComentarios() {

        var nro_reserva = $("#nro_reserva").html();

        $.ajax({
            type: 'GET',
            url: 'ListadoDeComentario?idSolicitud=' + nro_reserva,
            success: function (response) {
                $("#consultas").html(response);
                actualizar_Comentarios_Leidos();
            }
        })

    }

    function anularReserva() {
        var nro_reserva = $("#nro_reserva").html();

        var result = confirm("Realmente quiere anular la reserva");

        if (result) {
            $.ajax({
                type: 'GET',
                url: 'AnularReserva?id=' + nro_reserva,
                success: function (response) {
                    planoListadoReserva()
                    planoReserva()
                    $('#myModal').modal('hide');
                }
            })
        }
    }

    function checkin(id) {
        var nro_reserva = id;

        var result = confirm("Realmente quiere hacer el check-in.");

        if (result) {
            $.ajax({
                type: 'GET',
                url: 'CheckInReserva?id=' + nro_reserva,
                success: function (response) {
                    planoListadoReserva()
                    planoReserva()
                    $('#myModal').modal('hide');
                }
            })
        }
    }

    function checkout(id) {
        var nro_reserva = id;

        var result = confirm("Realmente quiere hacer el check-out.");

        if (result) {
            $.ajax({
                type: 'GET',
                url: 'CheckOutReserva?id=' + nro_reserva,
                success: function (response) {
                    planoListadoReserva()
                    planoReserva()
                    $('#myModal').modal('hide');
                }
            })
        }
    }

    function actualizar_Comentarios_Leidos() {

        var nro_reserva = $("#nro_reserva").html();
        $.ajax({
            type: 'GET',
            url: 'Actualizar_Comentarios_Leidos?id=' + nro_reserva,
            success: function (response) {
                planoListadoReserva()
                planoReserva()
            }
        })
    }

    function enviarConsulta() {

        if ($("#consultareserva").val() != "") {

            var fdata = new FormData();

            fdata.append("nro_reserva", $("#nro_reserva").html());

            fdata.append("consultareserva", $("#consultareserva").val());

            fdata.append("filereserva", $("#filereserva")[0].files[0]);

            fdata.append("comentarioCliente", "0");


            $.ajax({
                type: 'POST',
                url: 'GuardarConsulta',
                data: fdata,
                contentType: false,
                processData: false,
                success: function (response) {
                    $("#consultas").html(response);
                    $("#filereserva").val('');
                    $("#consultareserva").val('');
                }
            })

        } else {
            alert("Debe enviar un comentario.");
        }


    }


</script>



