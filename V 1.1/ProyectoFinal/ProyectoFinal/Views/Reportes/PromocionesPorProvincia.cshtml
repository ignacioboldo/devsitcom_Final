    <div class="container">

        <h3><strong>@ViewBag.nombre_reporte</strong></h3>

        <div class="row">

            <div class="col-md-3">

                <input type="text" name="fecha_desde" id="fecha_desde" class="form-control date" placeholder="Fecha Desde" value="@Session["fecha_desde"]" />
            </div>
            <div class="col-md-3">

