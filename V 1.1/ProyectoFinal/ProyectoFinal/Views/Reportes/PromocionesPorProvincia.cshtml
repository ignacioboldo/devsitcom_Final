@{
    ViewBag.Title = "Gestion de Reportes";
}


<script>


    $(document).ready(function () {

        $('.date').mask('00-00-0000');

        $('#fecha_desde').datetimepicker({
            locale: 'es',
            format: 'DD/MM/YYYY'
        });

        $('#fecha_hasta').datetimepicker({
            locale: 'es',
            format: 'DD/MM/YYYY'
        });

        $('#fecha_hasta').datetimepicker({
            locale: 'es',
            format: 'DD/MM/YYYY'
        });


    });
    function armar_graficoTorta() {

        var tipo_reporte = $("#tipo_reporte").val();
        //var nombre_reporte = $("#nombre_reporte").val();
        var nombre_reporte = "@ViewBag.nombre_reporte";
        var fecha_desde = $("#fecha_desde").val();
        var fecha_hasta = $("#fecha_hasta").val();
        var negocio = $("#Negocios").val();

        $("#resultado").hide();
        $("#cargando_grafico").show();

        $.ajax({
            type: 'GET',
            url: 'DataGraficoTortaNegocio?tipo_reporte=' + tipo_reporte + '&nombre_reporte=' + nombre_reporte + '&fecha_desde=' + fecha_desde + '&fecha_hasta=' + fecha_hasta + '&negocio=' + negocio,
            success: function (response) {

                var valores = [];
                var etiquetas = [];

                response.forEach(function (element) {
                    valores.push(element.Valor);
                    etiquetas.push(element.Campo);
                });

                var config = {
                    type: 'pie',
                    data: {
                        datasets: [{
                            data: valores,
                            label: 'Dataset 1',
                            backgroundColor: colores(valores)
                        }],
                        labels: etiquetas
                    },
                    options: {
                        responsive: true
                    }
                };

                var ctx = document.getElementById("chart-area").getContext("2d");
                window.myPie = new Chart(ctx, config);

                $("#cargando_grafico").hide();
               
                $("#canvas-holder").show();
                $("#chart-area").show();
                $("#canvas").hide();
                $("#resultado").hide();
            }
        })

    }

    function armar_graficoBarraDinamico() {

        var tipo_reporte = $("#tipo_reporte").val();
        //var nombre_reporte = $("#nombre_reporte").val();
        var nombre_reporte = "@ViewBag.nombre_reporte";
        var fecha_desde = $("#fecha_desde").val();
        var fecha_hasta = $("#fecha_hasta").val();
        var negocio = $("#Negocios").val();
        var nombre1 = "@ViewBag.valor1";
        var nombre2 = "@ViewBag.valor2";
        var nombre3 = "@ViewBag.valor3";


        $("#cargando_grafico").show();

        $.ajax({
            type: 'GET',
            url: 'DataGraficoTortaNegocio?tipo_reporte=' + tipo_reporte + '&nombre_reporte=' + nombre_reporte + '&fecha_desde=' + fecha_desde + '&fecha_hasta=' + fecha_hasta + '&negocio=' + negocio,
            success: function (response) {
                
                var valores = [];
                var valores_2 = [];
                var valores_3 = [];
                var etiquetas = [];

                response.forEach(function (element) {

                    valores.push(element.Valor);
                    valores_2.push(element.Valor_2);
                    valores_3.push(element.Valor_3);

                    etiquetas.push(element.Campo);
                });

                var color = Chart.helpers.color;

                var barChartData = {
                    labels: etiquetas,
                    datasets: [{
                        label: nombre1,
                        backgroundColor: color(window.chartColors.red).alpha(0.5).rgbString(),
                        borderColor: window.chartColors.green,
                        borderWidth: 1,
                        data: valores
                    },
                    {
                        label: nombre2,
                        backgroundColor: color(window.chartColors.blue).alpha(0.5).rgbString(),
                        borderColor: window.chartColors.green,
                        borderWidth: 1,
                        data: valores_2
                    },
                    {
                        label: nombre3,
                        backgroundColor: color(window.chartColors.yellow).alpha(0.5).rgbString(),
                        borderColor: window.chartColors.green,
                        borderWidth: 1,
                        data: valores_3
                    }]

                };

                var ctx = document.getElementById("canvas").getContext("2d");
                window.myBar = new Chart(ctx, {
                    type: 'bar',
                    data: barChartData,
                    options: {
                        responsive: true,
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: nombre_reporte
                        },
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true
                                }
                            }]
                        }
                    }
                });

                $("#cargando_grafico").hide();

            }
        })

        $("#cargando_grafico").hide();
        $("#canvas").show();
        $("#canvas-holder").hide();
        $("#chart-area").hide();
        $("#resultado").hide();
    }


    function armar_graficoBarra() {

        var tipo_reporte = $("#tipo_reporte").val();
        //var nombre_reporte = $("#nombre_reporte").val();
        var nombre_reporte = "@ViewBag.nombre_reporte";
        var fecha_desde = $("#fecha_desde").val();
        var fecha_hasta = $("#fecha_hasta").val();
        var negocio = $("#Negocios").val();

        $("#resultado").hide();
        $("#cargando_grafico").show();

        $.ajax({
            type: 'GET',
            url: 'DataGraficoTortaNegocio?tipo_reporte=' + tipo_reporte + '&nombre_reporte=' + nombre_reporte + '&fecha_desde=' + fecha_desde + '&fecha_hasta=' + fecha_hasta + '&negocio=' + negocio,
            success: function (response) {

                var valores = [];
                var etiquetas = [];
                
               response.forEach(function (element) {
                    valores.push(element.Valor);
                    etiquetas.push(element.Campo);
                });

                var color = Chart.helpers.color;

                var barChartData = {
                    labels: etiquetas,
                    datasets: [{
                        label: 'Representa',
                        backgroundColor: color(window.chartColors.green).alpha(0.5).rgbString(),
                        borderColor: window.chartColors.green,
                        borderWidth: 1,
                        data: valores
                    }]

                };

                var ctx = document.getElementById("canvas").getContext("2d");
                window.myBar = new Chart(ctx, {
                    type: 'bar',
                    data: barChartData,
                    options: {
                        responsive: true,
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: nombre_reporte
                        },
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true
                                }
                            }]
                        }
                    }
                });

                $("#cargando_grafico").hide();
                $("#canvas").show();
                $("#canvas-holder").hide();
                $("#chart-area").hide();
                $("#resultado").hide();


            }
        })

    }

    function colores(internalData) {

        var graphColors = [];
        var graphOutlines = [];
        var hoverColor = [];

        var internalDataLength = internalData.length;
        i = 0;
        while (i <= internalDataLength) {
            var randomR = Math.floor((Math.random() * 130) + 100);
            var randomG = Math.floor((Math.random() * 130) + 100);
            var randomB = Math.floor((Math.random() * 130) + 100);

            var graphBackground = "rgb("
                    + randomR + ", "
                    + randomG + ", "
                    + randomB + ")";
            graphColors.push(graphBackground);

            var graphOutline = "rgb("
                    + (randomR - 80) + ", "
                    + (randomG - 80) + ", "
                    + (randomB - 80) + ")";
            graphOutlines.push(graphOutline);

            var hoverColors = "rgb("
                    + (randomR + 25) + ", "
                    + (randomG + 25) + ", "
                    + (randomB + 25) + ")";
            hoverColor.push(hoverColors);

            i++;
        };

        return hoverColor;

    }
    function ReporteCampoFechaValorPorNegocio() {

        var tipo_reporte = $("#tipo_reporte").val();
        //var nombre_reporte = $("#nombre_reporte").val();
        var nombre_reporte = "@ViewBag.nombre_reporte";
        var fecha_desde    = $("#fecha_desde").val();
        var fecha_hasta    = $("#fecha_hasta").val();
        var negocio = $("#Negocios").val();

     

        $.ajax({
            type: 'GET',
            url: 'ReporteCampoFechaValorPorNegocio?tipo_reporte=' + tipo_reporte + '&nombre_reporte=' + nombre_reporte + '&fecha_desde=' + fecha_desde + '&fecha_hasta=' + fecha_hasta + '&negocio='+negocio,
            success: function (response) {
                $("#resultado").html(response);
            }
        })

        $("#cargando_grafico").hide();
        $("#canvas-holder").hide();
        $("#chart-area").hide();
        $("#canvas").hide();
        $("#resultado").show();
    }

    function llamarReporte() {
        var tipo_reporte = $("#tipo_reporte").val();

        

        if (tipo_reporte == "General")
            armar_graficoTorta();
        else
            armar_graficoBarraDinamico();
    }

</script>

