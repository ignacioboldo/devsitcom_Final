
<script>

    $(document).ready(function () {
        armar_grafico();
    });

    function armar_grafico() {

        $("#cargando_grafico").show();

        $.ajax({
            type: 'GET',
            url: 'DataGraficoTorta?un_parametro=Hola Picho',
            success: function (response) {

                var valores = [];
                var etiquetas = [];

                response.forEach(function (element) {
                    valores.push(element.Valor);
                    etiquetas.push(element.Etiqueta);
                });

                var config = {
                    type: 'pie',
                    data: {
                        datasets: [{
                            data: valores,
                            label: 'Dataset 1',
                            backgroundColor: colores(valores)
                        }],
                        labels: etiquetas
                    },
                    options: {
                        responsive: true
                    }
                };

                var ctx = document.getElementById("chart-area").getContext("2d");
                window.myPie = new Chart(ctx, config);

                $("#cargando_grafico").hide();

            }
        })

    }

    function colores(internalData) {

        var graphColors = [];
        var graphOutlines = [];
        var hoverColor = [];

        var internalDataLength = internalData.length;
        i = 0;
        while (i <= internalDataLength) {
            var randomR = Math.floor((Math.random() * 130) + 100);
            var randomG = Math.floor((Math.random() * 130) + 100);
            var randomB = Math.floor((Math.random() * 130) + 100);

            var graphBackground = "rgb("
                    + randomR + ", "
                    + randomG + ", "
                    + randomB + ")";
            graphColors.push(graphBackground);

            var graphOutline = "rgb("
                    + (randomR - 80) + ", "
                    + (randomG - 80) + ", "
                    + (randomB - 80) + ")";
            graphOutlines.push(graphOutline);

            var hoverColors = "rgb("
                    + (randomR + 25) + ", "
                    + (randomG + 25) + ", "
                    + (randomB + 25) + ")";
            hoverColor.push(hoverColors);

            i++;
        };

        return hoverColor;

    }

</script>




